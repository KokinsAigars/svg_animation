{
	//	Workbench
	"workbench.colorTheme": "Default Dark+",
	"workbench.sideBar.location": "right",
	"workbench.startupEditor": "newUntitledFile",
	"workbench.activityBar.visible": true,
	"workbench.iconTheme": "material-icon-theme",
	"workbench.colorCustomizations": {
		"statusBar.noFolderBackground" : "#212121",
		"statusBar.debuggingBackground": "#263238",
		"activityBar.background": "#242424",
		"focusBorder": "#797979",
		"editor.lineHighlightBackground": "#1E1E1E",
		"editor.foreground": "#DCDCDC",
		"editorLineNumber.foreground":"#414141",
		"editorCursor.foreground":"#797979",
		"editorGutter.foldingControlForeground": "#555555",
		"editorIndentGuide.activeBackground": "#242424",
		"editorIndentGuide.background": "#242424",
		"editor.background": "#1a1919",
		"statusBar.background": "#313131",
		"editor.foldBackground":"#1E1E1E",
	},

	//	Editor
	"editor.minimap.enabled": false,
	"editor.renderWhitespace": "none",
	"editor.renderControlCharacters": false,
	"editor.foldingHighlight": false,
	"editor.showFoldingControls": "always",
	"editor.hover.delay": 1500,
	"editor.unicodeHighlight.ambiguousCharacters": false,
	"breadcrumbs.enabled": false,
	"files.autoSave": "afterDelay",
	"editor.tokenColorCustomizations": {
		"comments": "#888787"
	},
	// "editor.fontFamily": "Consolas, 'Courier New', monospace",
	"editor.fontFamily": "Consolas",
	"terminal.integrated.fontFamily": "Courier New",
	"editor.tabSize": 4,
	"editor.fontSize":  14,
	"editor.letterSpacing": 0.8,
	"editor.lineHeight": 0,
	"editor.fontWeight": "normal",

	//  liveServer
	"liveServer.settings.CustomBrowser": "chrome",

	//XML
	"xml.symbols.maxItemsComputed": 50000,
	"redhat.telemetry.enabled": false,
	"[xml]": {
		"editor.defaultFormatter": "redhat.vscode-xml"
	},

	//Sass
	"liveSassCompile.settings.excludeList": [
		"/node_modules/**"
	],
	"liveSassCompile.settings.formats": [
	{
		"format": "compressed",
		"extensionName": ".min.css",
		"savePath": "/docs"
	},
	],
	"liveSassCompile.settings.generateMap": false,

	// Git
	"git.path": "C:/Program Files/Git",
	"git.autofetch": true,
	"scm.alwaysShowRepositories": true,
	"scm.alwaysShowActions": true,
	"scm.providerCountBadge": "visible",
	"git.confirmSync": false,
	"git.enableSmartCommit": true,
	"files.exclude": {
	"**/.git": false
	},

	//  CSS
	"[css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	//  HTML
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},

	//	typescript
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	//  Spelling
	"cSpell.userWords": [
		"aāiīuūeokgcjñṭḍtdnpbmyrlvsh",
		"AĀIĪUŪEOKGCJÑṬḌTDNPBMYRLVSHṄṆḶṂ",
		"Aigars",
		"Bkgcjṭtdpb",
		"KGCJṬTDP",
		"KGCJṬTDPB",
		"KGCJṬTDPBḌḶH",
		"Kokins",
		"latviešu",
		"Meklēt",
		"pāli",
		"Trsl",
		"tulkojumi",
		"valodā",
		"vārdnīcā",
		"Xinclude"
	],
	"cSpell.words": [
		"autotable",
		"dompurify",
		"jspdf",
		"modif",
		"nodenext",
		"Noto",
		"scripthost",
		"spdy",
		"timesbd",
		"timesi"
	],


	"vscode-edge-devtools.mirrorEdits": true,
	"security.workspace.trust.untrustedFiles": "open",

}